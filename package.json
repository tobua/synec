{
  "name": "synec",
  "description": "Test local npm packages in projects.",
  "version": "0.0.0-development",
  "repository": "github:tobua/synec",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "test": "padua test"
  },
  "padua": {
    "source": true
  },
  "dependencies": {
    "check-dependencies": "^1.1.0",
    "chokidar": "^3.5.2",
    "folder-hash": "^4.0.1",
    "logua": "^2.1.4",
    "mem": "^9.0.1",
    "parse-gitignore": "^1.0.1",
    "rimraf": "^3.0.2",
    "schema-utils": "^3.1.1",
    "semver": "^7.3.5",
    "strip-ansi": "^7.0.1"
  },
  "type": "module",
  "main": "index.js",
  "exports": {
    "default": "./index.js"
  },
  "bin": "cli/index.js",
  "source": "index.js",
  "types": "index.d.ts",
  "files": [
    "cli",
    "utility",
    "*.js",
    "index.d.ts"
  ],
  "devDependencies": {
    "padua": "^0.3.14"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs",
    "rules": {
      "import/extensions": [
        2,
        "ignorePackages"
      ]
    }
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "test/fixture"
    ],
    "transform": {
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./node_modules/padua/configuration/.babelrc"
        }
      ]
    },
    "transformIgnorePatterns": []
  },
  "engines": {
    "node": ">= 14"
  }
}
