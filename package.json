{
  "name": "synec",
  "description": "Test local npm packages in projects.",
  "version": "0.1.7",
  "repository": "github:tobua/synec",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "test": "padua test"
  },
  "padua": {
    "source": true
  },
  "dependencies": {
    "check-dependencies": "^1.1.0",
    "chokidar": "^3.4.3",
    "folder-hash": "^4.0.0",
    "logua": "^2.1.1",
    "parse-gitignore": "^1.0.1",
    "schema-utils": "^3.0.0",
    "semver": "^7.3.2"
  },
  "type": "module",
  "main": "index.js",
  "bin": "cli/index.js",
  "source": "index.js",
  "types": "index.d.ts",
  "files": [
    "**/*.js",
    "index.d.ts",
    "!test"
  ],
  "devDependencies": {
    "padua": "^0.1.2",
    "rimraf": "^3.0.2"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs",
    "rules": {
      "import/extensions": [
        2,
        "always"
      ]
    }
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "test/fixture"
    ],
    "transform": {
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./node_modules/padua/configuration/.babelrc"
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/cint"
    ]
  },
  "engines": {
    "node": ">= 13.2.0"
  }
}
